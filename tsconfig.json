{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es2018",
		"declaration": true,
		"skipLibCheck": true
	},
	"include": [
		"*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
